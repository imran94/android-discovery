<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:id="@+id/endpoint_icon"
        android:src="@drawable/endpoint" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Endpoint ID"
        android:id="@+id/endpoint_id"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/endpoint_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Endpoint Name"
        android:id="@+id/endpoint_name"
        android:layout_below="@+id/endpoint_id"
        android:layout_toRightOf="@+id/endpoint_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Device ID"
        android:id="@+id/device_id"
        android:layout_toRightOf="@+id/endpoint_icon"
        android:layout_below="@+id/endpoint_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service ID"
        android:id="@+id/service_id"
        android:layout_toRightOf="@+id/endpoint_icon"
        android:layout_below="@+id/device_id" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invite"
        android:id="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>